{
    "manifest_version": 3,
    "name": "MV Tools",
    "description": "Categoriza, resalta, bloquea u oculta usuarios en Mediavida. Con diferentes opciones de personalizaci√≥n.",
    "version": "0.0.1",
    "icons": {
        "16": "logo/logo-16.png",
        "48": "logo/logo-48.png",
        "128": "logo/logo-128.png"
    },
    "options_page": "settings/settings.html",
    "action": {
        "default_title": "Chrome Addon v3 Starter",
        "default_popup": "popup/popup.html"
    },
    "permissions": [],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "content_scripts": [{
        "js": ["functions/block-users.js", "functions/ui.js", "foreground.js"],
        "matches": ["https://*.mediavida.com/foro/*/*"]
    }],
    "web_accessible_resources": [
        {
            "resources": ["custom.css"],
            "matches": ["http://*/*", "https://*/*"]
        }
    ]
}